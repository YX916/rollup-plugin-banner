{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "checkJs": false,
    "target": "ES5",
    "allowJs": true,
    "types": [
      "node"
    ],
    "declaration": true, // 是否生成声明文件
    "outDir": "./dist",
    "strict": true,
    "lib": [
      "DOM",
      "ES2015",
      "ES2016",
      "ES2017"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}